<?xml version="1.0" encoding="utf-8"?>
<Container>
  <Name>Sonos API</Name>
  <Beta>True</Beta>
  <Category>MediaServer:Video MediaServer:Music</Category>
  <Description>
    Sonos web-based API [br][br]


  </Description>
  <Registry>https://hub.docker.com/r/chrisns/docker-node-sonos-http-api/</Registry>
  <GitHub>https://hub.docker.com/r/chrisns/docker-node-sonos-http-api/</GitHub>
  <Repository>chrisns/docker-node-sonos-http-api</Repository>
  <BindTime>true</BindTime>
  <Privileged>false</Privileged>
  <Environment>
    <Variable>
      <Name>TERM</Name>
      <Value>xterm</Value> 
    </Variable>
  </Environment>
  <Networking>
    <Mode>host</Mode>
     <Publish>
      <Port>
        <HostPort>5005</HostPort>
        <ContainerPort>5005</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>  
      <HostDir>/mnt/cache/appdata/sonos-api/</HostDir>
      <ContainerDir>/app/</ContainerDir>
	  <Mode>rw</Mode>
    </Volume>
    <Volume>	
      <HostDir>/mnt/cache/appdata/sonos-api/clips</HostDir>
      <ContainerDir>/app/static/clips/</ContainerDir>
	  <Mode>rw</Mode>
    </Volume>
    <Volume>	
      <HostDir>/mnt/cache/appdata/sonos-api/settings</HostDir>
      <ContainerDir>/app/settings/</ContainerDir>
	  <Mode>rw</Mode>
    </Volume>
    <Volume>	
      <HostDir>/mnt/cache/appdata/sonos-api/cache/</HostDir>
      <ContainerDir>/app/cache</ContainerDir>
	  <Mode>rw</Mode>
    </Volume>
    <Volume>	
	  <HostDir>/mnt/cache/appdata/sonos-api/presets/</HostDir>
      <ContainerDir>/app/presets/</ContainerDir>
	  <Mode>rw</Mode>
    </Volume>
  </Data>
  <WebUI>http://[IP]:[PORT:5005]/</WebUI>
  <Banner>http://i.imgur.com/zlBhvgD.png</Banner>
  <Icon>http://i.imgur.com/fWqcDnZ.png</Icon>
</Container>
